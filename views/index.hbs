<h1>Eat Da <span class="badge badge-secondary">Burger</span></h1>

<div class="container">
    <form class="textarea">
        <div class="form-group">
            <label class="input product" for="input">Burger Name</label>
            <input type="text" class=" form-control" id="input">
        </div>
        <button type="submit" id="submitButton" class="btn btn-primary submitBtn">Add Burger</button>
    </form>
  <hr>
  <div class="row" style="text-align: center;">
    <div class="col-md-6">
      <ul id="notDevoured" class="list-group">
        <h2>Wish List</h2>
        {{#each burgers}}
        {{#unless this.devoured}}

        <li id="{{ this.id }}" class="list-group-item">
          <div class="d-flex w-100 justify-content-between">

            <h5 class="mb-1">{{ this.burger_name }}</h5>

            <button
              data-name="{{ this.burger_name }}"
              class="Devoured btn btn-success">Devour it</button>

          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <ul id="devoured" class="list-group">
        <h2>Devoured</h2>
        {{#each burgers}}
        {{#if this.devoured}}
        <li id="{{ this.id }}" class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{ this.burger_name }}</h5>

            <button class="btn btn-danger remove">Delete</button>

          </div>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
